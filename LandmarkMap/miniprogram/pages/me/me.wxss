.container {
  padding: 15px 10px;
}

.avator {
  background: linear-gradient(to bottom, red 2%, #e0e0e0 50%, white 100%);
  width: 100vw;
  height: 350rpx;
  position: relative;
  z-index: -100;
  display: flex;
}

.avator .login {
  width: 140rpx;
  margin: auto;
  margin-right: 100rpx;
  border-radius: 50rpx;
  color: #e0e0e0;
  background-color: #e9a43d;
  box-shadow: 2rpx 2rpx 2rpx 2rpx #e1a0a0;
}

.user-head {
  height: 50px;
  background-color: white;
  height: 200rpx;
  border-bottom: 1px solid #e0e0e0;
}

.section {
  margin-bottom: 10px;
}
.section_title {
  font-size: 12px;
  color: #999;
}
.section_check {
  margin-right: 5px;
}
.section_switch {
  float: right;
  margin-right: 5px;
}

.section_tip {
  display: block;
  text-align: right;
  color: #cec9c9;
  padding-bottom: 10px;
}
.section_body {
  margin-top: 5px;
}

.section_about {
  display: block;
  text-align: left;
  color: #cec9c9;
  padding-bottom: 8px;
}

.weui-toptips {
  display: block;
  margin-top: 80rpx;
}
.weui-toptips_warn {
  background-color: #07c160;
}

.before_footer {
  margin-top: 100rpx;
  margin-bottom: 3px;
  padding-left: 16px;
  padding-right: 16px;
  color: rgba(0, 0, 0, 0.5);
  font-size: 14px;
}

.footer_button {
  display: inline-block;
  vertical-align: top;
  margin: 0 8px;
  position: relative;
  font-size: 14px;
  color: #576b95;
  background-color: #ededed;
}
.footer_button::after {
  border: 0;
  /* background-color: rgba(22, 36, 236, 0.041); */
}
